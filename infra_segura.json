{
  "resource": {
    "aws_security_group": {
      "acesso_restrito_vpn": {
        "name": "ssh_vpn_only",
        "description": "Permite SSH apenas via VPN Corporativa",
        "ingress": [
          {
            "from_port": 22,
            "to_port": 22,
            "protocol": "tcp",
            "cidr_blocks": [
              "10.0.0.5/32" 
            ]
          }
        ]
      },
      "web_server_publico": {
        "name": "https_traffic",
        "description": "Trafego Web Seguro",
        "ingress": [
          {
            "from_port": 443,
            "to_port": 443,
            "protocol": "tcp",
            "cidr_blocks": [
              "0.0.0.0/0"
            ]
          }
        ]
      }
    },
    "aws_s3_bucket": {
      "logs_auditoria": {
        "bucket": "company-audit-logs-secure",
        "acl": "private",
        "server_side_encryption_configuration": {
          "rule": {
            "apply_server_side_encryption_by_default": {
              "sse_algorithm": "AES256"
            }
          }
        }
      }
    }
  }
}